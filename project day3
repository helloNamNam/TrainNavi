# -*- coding: utf-8 -*-
from Tkinter import*
from PIL import Image, ImageTk
class Train:
    def __init__ (self):
        self.world = Tk()
        self.world.geometry("800x600")
        self.world.title("Train navigator")

        self.front = Canvas(self.world, width = 800, height = 600)
        self.front.pack()
        
        self.photo = ImageTk.PhotoImage(Image.open("Train.jpg"))
        self.photoimpage = self.front.create_image(400,300, image = self.photo)

        self.menuButton = ImageTk.PhotoImage(Image.open("menu b.jpg"))
        self.menuBimage = self.front.create_image(680,550, image = self.menuButton)

        self.front.bind("<Button>", self.menu)

        self.world.mainloop()
   
    def menu(self,event):
        overlap = self.front.find_overlapping(event.x,event.y,event.x,event.y)

        if len(overlap) > 0:
            if self.menuBimage in overlap:
                self.menuPhoto = ImageTk.PhotoImage(Image.open("menu.jpg"))
                self.menuImage = self.front.create_image(400,300, image = self.menuPhoto, tag = "menu")

                self.btsButtonImage = ImageTk.PhotoImage(Image.open("bts b.jpg"))
                self.mrtButtonImage = ImageTk.PhotoImage(Image.open("mrt b.jpg"))
                self.airButtonImage = ImageTk.PhotoImage(Image.open("air b.jpg"))
                
                self.btsButton = self.front.create_image(400,280, image = self.btsButtonImage, tag = "bts b")
                self.mrtButton = self.front.create_image(400,380, image = self.mrtButtonImage, tag = "mrt b")
                self.airButton = self.front.create_image(400,480, image = self.airButtonImage, tag = "air b")

                
                self.front.bind("<Button>", self.nextt)

    
    def nextt(self,event):
        overlap = self.front.find_overlapping(event.x,event.y,event.x,event.y)

        if len(overlap) > 0:
            self.draw = Canvas(self.front,width = 600, height = 600, bg = 'Gray')
            self.draw.place(x = 0, y = 0)
            
            self.cal = Canvas(self.front, width = 200, height = 600, bg = 'Blue')
            self.cal.place(x = 600, y = 0)
            
            self.photoBTS = ImageTk.PhotoImage(Image.open("BTS.jpg"))
            self.photoimpage = self.draw.create_image(300,300, image = self.photoBTS, tag = "bts")
            self.draw.tag_raise("bts")

            self.photoMRT = ImageTk.PhotoImage(Image.open("MRT.jpg"))
            self.photoimpage = self.draw.create_image(300,300, image = self.photoMRT, tag = "mrt")
            self.draw.tag_lower("mrt")

            self.photoAIR = ImageTk.PhotoImage(Image.open("AIR.jpg"))
            self.photoimpage = self.draw.create_image(300,300, image = self.photoAIR, tag = "air")
            self.draw.tag_lower("air")

            self.station = ""
            self.label = Label(self.cal, text = self.station, bg = 'Blue')
            self.label.place(x = 100, y = 100)

            self.btsButton1 = self.draw.create_image(100,50, image = self.btsButtonImage, tag = "bts b1")
            self.mrtButton1 = self.draw.create_image(350,50, image = self.mrtButtonImage, tag = "mrt b1")
            self.airButton1 = self.draw.create_image(500,50, image = self.airButtonImage, tag = "air b1")

            self.draw.tag_raise("bts b1")
            self.draw.tag_raise("mrt b1")
            self.draw.tag_raise("air b1")

            if self.btsButton in overlap:
                self.bts()
            elif self.mrtButton in overlap:
                self.mrt()
            elif self.airButton in overlap:
                self.air()
            

                
    def bts(self):
        self.station = "สวัสดี"
        self.label = Label(self.cal, text = self.station)
        self.label.place(x = 100, y = 100)
        
        self.draw.tag_lower("bts")
        self.draw.tag_lower("mrt")
        self.draw.tag_lower("air")


    def mrt(self):
        self.draw.tag_lower("bts")
        self.draw.tag_raise("mrt")
        self.draw.tag_lower("air")

        self.draw.tag_raise("bts b1")
        self.draw.tag_raise("mrt b1")
        self.draw.tag_raise("air b1")


    def air(self):
        self.draw.tag_lower("bts")
        self.draw.tag_lower("mrt")
        self.draw.tag_raise("air")

        self.draw.tag_raise("bts b1")
        self.draw.tag_raise("mrt b1")
        self.draw.tag_raise("air b1")







        
Train()
